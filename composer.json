{
    "name": "esanj/auth-bridge",
    "description": "OAuth 2.0 Bridge package for connecting to external authorization servers.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Esanj Tech Team",
            "email": "tech@esanj.ir"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Esanj\\AuthBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esanj\\AuthBridge\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esanj\\AuthBridge\\AuthBridgeServiceProvider"
            ],
            "aliases": {
                "AuthBridge": "Esanj\\AuthBridge\\Facades\\AuthBridge"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}